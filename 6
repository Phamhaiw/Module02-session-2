public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Nhập một số nguyên từ bàn phím: ");
        int n = sc.nextInt();

        if(n<0){
            n = -n;
        };
        int tongChuSo = 0;

        while (n>0){
            int chuSo = n % 10;
            tongChuSo += chuSo;
            n /= 10;
        };
        System.out.println("Tổng các chữ số là: " + tongChuSo);
        sc.close();
    }};
